pipeline {
  environment {
    registry = "rajxxx/pwa"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/rajeever35/react-pwa-starter-kit.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          sh "docker-compose build"
          
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker tag react-pwa-starter-kit_frontend:latest "rajxxx"/react-pwa-starter-kit_frontend:new
          docker tag react-pwa-starter-kit_backend:latest "rajxxx"/react-pwa-starter-kit_backend:new
          sh 'docker push "rajxxx"/react-pwa-starter-kit_frontend:new'
          sh 'docker push "rajxxx"/react-pwa-starter-kit_backend:new'
          }
        }
      }
    stage('Remove Unused docker image') {
      steps{
       sh 'docker rmi -f  $(docker images -a -q)'
    }
 }
    stage('running app') {
    steps{
    script{
        sh 'docker pull "rajxxx"/react-pwa-starter-kit_frontend:new'
        sh 'docker pull "rajxxx"/react-pwa-starter-kit_backend:new'
        sh "docker-compose up -d"
        }
      }
    }
  }
 }
