pipeline {
  environment {
    registry = "rajxxx/pwa"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/rajeever35/react-pwa-starter-kit.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          sh "docker-compose build"
          sh "docker tag react-pwa-starter-kit_frontend:latest "rajxxx"/react-pwa-starter-kit_frontend:latest"
          sh "docker tag react-pwa-starter-kit_backend:latest "rajxxx"/react-pwa-starter-kit_backend:latest"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          sh "docker push "rajxxx"/react-pwa-starter-kit_frontend:latest"
          sh "docker push "rajxxx"/react-pwa-starter-kit_backend:latest"
          }
        }
      }
    }
    stage('Remove Unused docker image') {
         sh 'docker rmi -f  $(docker images -a -q)'
    }
    stage('running app') {
    steps{
    script{
        sh "docker pull "rajxxx"/react-pwa-starter-kit_frontend"
        sh "docker pull "rajxxx"/react-pwa-starter-kit_backend"
        sh "docker-compose up -d"
        }
      }
    }
  }
}
