pipeline {
  environment {
    registry = "rajxxx"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/rajeever35/react-pwa-starter-kit.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          sh "docker-compose build"
          
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          sh 'docker tag react-pwa_frontend:latest rajxxx/react-pwa_frontend:latest'
          sh 'docker tag react-pwa_backend:latest rajxxx/react-pwa_backend:latest'
          sh 'docker push rajxxx/react-pwa_frontend:latest'
          sh 'docker push rajxxx/react-pwa_backend:latest'
          }
        }
      }
    stage('Remove Unused docker image') {
      steps{
       sh 'docker rmi -f  $(docker images -a -q)'
    }
 }
    stage('running app') {
    steps{
    script{
        sh 'docker pull rajxxx/react-pwa_frontend:latest'
        sh 'docker pull rajxxx/react-pwa_backend:latest'
        sh "docker-compose up -d"
        }
      }
    }
  }
 }
